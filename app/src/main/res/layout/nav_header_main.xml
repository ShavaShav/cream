<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/background_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/setup_screen_bg" />

    <TextView
        android:id="@+id/title_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/background_nav"
        android:layout_alignLeft="@id/background_nav"
        android:layout_alignRight="@id/background_nav"
        android:layout_alignTop="@id/background_nav"
        android:layout_marginLeft="@dimen/fab_margin"
        android:gravity="left|bottom"
        android:text="@string/app_name"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/app_bar_title_color" />

</RelativeLayout>
